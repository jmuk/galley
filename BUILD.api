# build protos from istio.io/api repo
# TODO This file needs update.

package(default_visibility = ["//visibility:public"])

load("@io_bazel_rules_go//go:def.bzl", "go_prefix")

go_prefix("istio.io/api")

load("@org_pubref_rules_protobuf//grpc_gateway:rules.bzl", "grpc_gateway_proto_library")

grpc_gateway_proto_library(
    name = "galley/v1",
    importmap = {
        "google/protobuf/struct.proto": "github.com/golang/protobuf/ptypes/struct",
        "google/api/annotations.proto": "github.com/googleapis/googleapis/google/api/annotations",
        "google/rpc/status.proto": "github.com/googleapis/googleapis/google/rpc",
    },
    imports = [
        "../../external/com_github_google_protobuf/src",
        "../../external/com_github_googleapis_googleapis",
    ],
    inputs = [
        "@com_github_google_protobuf//:well_known_protos",
        "@com_github_googleapis_googleapis//:annotations_proto",
        "@com_github_googleapis_googleapis//:status_proto",
    ],
    protos = [
        "galley/v1/service.proto",
        "galley/v1/validator.proto",
        "galley/v1/watcher.proto",
    ],
    verbose = 0,
    visibility = ["//visibility:public"],
    deps = [
        "@com_github_golang_protobuf//proto:go_default_library",
        "@com_github_golang_protobuf//ptypes/struct:go_default_library",
        "@com_github_googleapis_googleapis//:google/api/annotations",
        "@com_github_googleapis_googleapis//:google/rpc",
        "@com_github_grpc_ecosystem_grpc_gateway//runtime:go_default_library",
        "@com_github_grpc_ecosystem_grpc_gateway//utilities:go_default_library",
        "@org_golang_google_grpc//codes:go_default_library",
        "@org_golang_google_grpc//grpclog:go_default_library",
    ],
)
